<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="281dp"
        android:layout_height="110dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="text|textMultiLine" />

    <Button
        android:id="@+id/hindi"
        android:layout_width="194dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:onClick="translateHindi"
        android:text="Hindi"/>

    <Button
        android:id="@+id/gujrati"
        android:layout_width="194dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:onClick="translateGujrati"
        android:text="GUJARATI" />

    <Button
        android:id="@+id/marathi"
        android:layout_width="194dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:onClick="translateMarathi"
        android:text="MARATHI" />
    <Button
        android:id="@+id/telgu"
        android:layout_width="194dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:onClick="translateTelgu"
        android:text="TELUGU" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="271dp"
        android:layout_height="90dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="225dp" />

</LinearLayout>